generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TypeOfEnglishWord {
  adjective
  adverb
  conjunction
  determiner
  noun
  preposition
  pronoun
  verb
}

model EnglishWord {
  id            String            @id @default(auto()) @map("_id") @db.ObjectId
  word          String
  meaning       String
  hindimeaning  String?
  description   String?
  typeofword    TypeOfEnglishWord
  UserWordScore UserWordScore[]
}

model UserWordScore {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  wordMemoryScore Int    @default(0)
  userEmailId     String @unique

  englishWord   EnglishWord? @relation(fields: [englishWordId], references: [id])
  englishWordId String?      @db.ObjectId

  updatedAt DateTime @updatedAt
}
